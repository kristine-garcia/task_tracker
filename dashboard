                    <th>Frequency</th>
                    <th>Completion Rate</th>
                    <th>Submission Date</th>
                    <th>Action</th>
                </tr>
                <tr>
                    <td><input type="text" name="taskName" placeholder="Task Name" required></td>
                    <td><input type="text" value="<?php echo htmlspecialchars(string: $username); ?>" readonly></td>
                    <td>
                        <select name="frequency" required>
                            <option value="">Select</option>
                            <option value="Daily">Daily</option>
                            <option value="Weekly">Weekly</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Once">Once</option>
                        </select>
                    </td>
                    <td><input type="text" name="completionRate" placeholder="%" required></td>
                    <td><input type="date" name="submissionDate" required></td>
                    <td><button type="submit" class="add-btn">Add</button></td>
                </tr>
                <?php foreach ($tasks as $index => $task): ?>
                    <tr>
                        <td><?php echo htmlspecialchars(string: $task['taskName']); ?></td>
                        <td><?php echo htmlspecialchars(string: $task['assignedTo']); ?></td>
                        <td><?php echo htmlspecialchars(string: $task['frequency']); ?></td>
                        <td><?php echo htmlspecialchars(string: $task['completionRate']); ?>%</td>
                        <td><?php echo htmlspecialchars(string: $task['submissionDate']); ?></td>
                        <td><a href="delete_task.php?index=<?php echo $index; ?>" class="add-btn" style="padding: 7px 12px;">Delete</a></td>
                    </tr>
                <?php endforeach; ?>
            </table>
        </form>
    </div>
