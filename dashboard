<?php
session_start();
include 'db.php';

if (!isset($_SESSION['username'])) {
    header(header: "Location: login.php");
    exit();
}

$username = $_SESSION['username'];
$studentId = isset($_SESSION['studentId']) ? $_SESSION['studentId'] : '';
$tasks = [];

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    if (isset($_POST['studentId'])) {
        $_SESSION['studentId'] = $_POST['studentId'];
    }
    if (isset($_POST['taskName']) && isset($_POST['frequency']) && isset($_POST['completionRate']) && isset($_POST['submissionDate'])) {
        $task = [
            'taskName' => $_POST['taskName'],
            'assignedTo' => $username,
            'frequency' => $_POST['frequency'],
            'completionRate' => $_POST['completionRate'],
            'submissionDate' => $_POST['submissionDate']
        ];
        $tasksFile = 'tasks.json';
        $tasks = file_exists(filename: $tasksFile) ? json_decode(json: file_get_contents(filename: $tasksFile), associative: true) : [];
        $tasks[] = $task;
        file_put_contents(filename: $tasksFile, data: json_encode(value: $tasks));
    }
}

$tasksFile = 'tasks.json';
if (file_exists(filename: $tasksFile)) {
    $tasks = json_decode(json: file_get_contents(filename: $tasksFile), associative: true) ?: [];
}
?>
<!DOCTYPE html>
