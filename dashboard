    <div class="sidebar">
        <div class="profile-name">Welcome, <?php echo htmlspecialchars(string: $username); ?></div>
        <div class="profile-details">
            <form method="POST" action="">
                <br><input type="number" id="studentId" name="studentId" placeholder="Student ID"  value="<?php echo htmlspecialchars(string: $studentId); ?>">
